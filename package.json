{
  "name": "scaneos_graphql",
  "version": "1.0.0",
  "description": "A gateway for all ScanEOS REST API.",
  "main": "server.js",
  "scripts": {
    "docker-build": "docker build . -t scaneos_graphql",
    "docker-run": "docker kill /scaneos_graphql && docker run -d --restart always --name scaneos_graphql -p 3130:3000 scaneos_graphql",
    "start": "concurrently \"nodemon --ignore ./server/generated/ -e graphql --exec 'yarn gql2flow'\" \"NODE_ENV=development nodemon --ignore ./server/generated/ -e js,graphql --delay 0.9 ./index.dev.js\"",
    "serve": "NODE_ENV=production node ./index.prod.js",
    "flow-typed": "rimraf flow-typed/npm && flow-typed install --overwrite || true",
    "gql2flow": "yarn build-schema && yarn gql-gen && yarn gqlJson2flow && echo âœ…",
    "build-schema": "mkdir -p ./server/generated &&  node ./scripts/buildSchema.js > ./server/generated/schema.graphql",
    "gql-gen": "apollo-codegen introspect-schema ./server/generated/schema.graphql --output ./server/generated/schema.json",
    "gqlJson2flow": "gql2ts ./server/generated/schema.json -e $PWD/scripts/@gql2ts-language-flow.js -o ./server/generated/types.flow.js --ignore-type-name-declaration && prettier-eslint \"./server/generated/*.js\" --write"
  },
  "dependencies": {
    "apollo-engine": "^1.1.2",
    "apollo-server-express": "^1.3.6",
    "body-parser": "^1.18.3",
    "camelize": "^1.0.0",
    "codegen.macro": "^3.0.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-import": "^0.6.0",
    "graphql-playground-middleware-express": "^1.7.1",
    "graphql-tools": "^3.0.4",
    "graphql-type-json": "^0.2.1",
    "lodash": "^4.17.10",
    "node-fetch": "^2.1.2",
    "param.macro": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "@babel/plugin-proposal-do-expressions": "^7.0.0-beta.51",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0-beta.51",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/register": "^7.0.0-beta.51",
    "@babel/runtime": "^7.0.0-beta.51",
    "@gql2ts/language-flow": "^1.8.0",
    "@gql2ts/types": "^1.8.0",
    "apollo-codegen": "^0.20.2",
    "babel-eslint": "^8.2.5",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "babel-plugin-flow-runtime": "^0.17.0",
    "babel-plugin-import": "^1.8.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-macros": "^2.2.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-preset-react-app": "^4.0.0-next.3e165448",
    "concurrently": "^3.6.0",
    "eslint": "^5.0.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.75.0",
    "flow-runtime": "^0.17.0",
    "flow-typed": "^2.4.0",
    "gql2ts": "^1.8.0",
    "nodemon": "^1.17.5",
    "prettier-eslint-cli": "^4.7.1"
  },
  "author": "Lin Onetwo",
  "license": "UNLICENSED",
  "homepage": "https://scaneos.io"
}
